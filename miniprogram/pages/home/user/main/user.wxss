.header {
  padding: 15px 0;
  text-align: center;
  height: 300rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background:  rgb(216, 205, 188);
}



.avatar {
  width: 80px;
  height: 80px;
  margin-top: 80rpx;
  margin-bottom: 18rpx;
  border-radius: 50%;
  border: 5rpx solid rgba(255, 255, 255, 0.699);
  border-style: solid;
  border-width: 0rpx;
  overflow:hidden;  
  display: block;    
} 

.btn0{
  background-color:rgb(245, 119, 38);
  color: white;
  font-size: 37rpx;
}

.btn1{
  background-color:rgb(165, 161, 158);
  color: white;
  font-size: 37rpx;
}

.overflow0{
  box-shadow:0px 2px 5px 5px rgb(235, 121, 27);
}

.overflow1{
  box-shadow:0px 2px 5px 5px rgb(184, 172, 162);
}

.literal{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

 .sl{
  margin-top: 10rpx;
  margin-bottom: -15rpx;
  color:#5c3a22;
  font-size: 100rpx;
  font-weight:bold;

  display: flex;
  justify-content: center;
 }


.content__right {
  color: #523f32;
}

.user-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-status {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 700;

  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.user-status .iconfont {
  margin-left: 12rpx;
}

.mine-tool {
  display: flex;
  background: #ffffff;
  height: 90px;
  align-items: center;
}

.mine-tool-item {
  flex: 1;
  text-align: center;
}

.mine-tool-item .value {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #000000;
}

.value-icon {
  margin-left: 10rpx;
}

.mine-tool-item .title {
  font-size: 24rpx;
}

.div-line{
  height: 20rpx;
  background-color: rgba(175, 172, 172, 0.185);
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}


