<view class="header">
  <view>
    <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
  </view>
  <view class="literal">
    <view style="font-size: 35rpx;color:#5c3a22;">hi，{{userInfo.nickName}}</view>

  </view>
</view>

<!-- 右上角 -->
<view class="content__right">
  <view class="user-action">
    <navigator url="../settings/myData">
      <view class="user-status">
        <image src="../../image/setting.png" style="height:60rpx;width:60rpx"></image>
      </view>
    </navigator>
  </view>
</view>

<!-- 四个主要工具 -->
<view class="mine-tool">


  <view class="mine-tool-item">
    <view class="value">
      <navigator url="../comments/comments">
        <image src="../../image/评论.png" style="height:80rpx;width:80rpx"></image>
      </navigator>
    </view>
    <view class="title">评价</view>
  </view>

  <view class="mine-tool-item">
    <view class="value">
      <navigator url="../tickets/tickets">
        <image src="../../image/买一赠一.png" style="height:80rpx;width:80rpx"></image>
      </navigator>
    </view>
    <view class="title">我的优惠券</view>
  </view>

  <view class="mine-tool-item">
    <view class="value">
      <navigator url="../paihang/paihang">
        <image src="../../image/排行榜.png" style="height:80rpx;width:80rpx"></image>
      </navigator>
    </view>
    <view class="title">积分排行榜</view>
  </view>

  <view class="mine-tool-item">
    <view class="value">
      <navigator url="../shoucang/shoucang">
        <image src="../../image/like.png" style="height:85rpx;width:85rpx"></image>
      </navigator>
    </view>
    <view class="title">我的收藏</view>
  </view>
</view>

<!-- 分界线 -->
<view class="div-line"></view>

<!--下面几个分类 -->
<navigator url="../address/address" hover-class="none">
  <view class="address-box">
    <view class="address-manage">
      <image style="height:60rpx;width:60rpx" src="../../image/region.png"></image>
      <text style="margin-left:10rpx;">修改地址</text>
    </view>
  </view>
</navigator>
<!-- 分界线 -->
<view class="div-line"></view>

<navigator url="../news/news" hover-class="none">
  <view class="address-box">
    <view class="address-manage">
      <image style="height:60rpx;width:60rpx" src="../../image/关注.png"></image>
      <text style="margin-left:10rpx;">美食推送</text>
    </view>
  </view>
</navigator>

<navigator url="../aboutus/aboutus" hover-class="none">
  <view class="address-box">
    <view class="address-manage">
      <image style="height:60rpx;width:60rpx" src="../../image/彩蛋.png"></image>
      <text style="margin-left:10rpx;">关于我们</text>
    </view>
  </view>
</navigator>

<navigator url="../going-order/going-order" hover-class="none">
  <view class="address-box">
    <view class="address-manage">
      <image style="height:60rpx;width:60rpx" src="../../image/share.png"></image>
      <text style="margin-left:10rpx;">正在进行的订单</text>
    </view>
  </view>
</navigator>

<!-- 分界线 -->
<view class="div-line"></view>
<view class='btns'>
  <button open-type="contact" class="goodbutton">客服会话</button>
  <button open-type="feedback" class="goodbutton">意见与反馈</button>
  <button open-type="openSetting" class="goodbutton">打开授权设置页</button>
</view>