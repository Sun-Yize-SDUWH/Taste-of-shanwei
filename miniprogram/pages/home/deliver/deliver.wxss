page{
  height: 100%;
  width: 100%;
}
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
 margin-bottom: 20rpx;
 
}

.deliver{
  display: flex;
  flex-direction: column;
  background: rgba(0, 255, 213, 0.863);

}

.deliver .top{
  height: 80px;
  border-radius: 30rpx;
  background: #fff;
  margin: 8px;
  display: flex;
  
}

.deliver .top .image{
  height: 80px;
  width: 80px;

}

.deliver .top .image image{
  height: 80%;
  width: 90%;
  margin: 10px;

}

.deliver .top .mes{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  justify-content: center;
  padding: 50rpx 50rpx
  

}

.deliver .orderbottom{
  border-radius: 30rpx;
  background: #fff;
  margin: 10px;
  margin-top: 20px;
  display: flex;
  flex-direction: column;

}

.deliver .orderbottom .image{
  height: 350px;
  width: 350px;
  margin-left: 10px


}

.deliver .orderbottom .image image{
  height: 90%;
  width: 90%;
  margin: 10px;

}

.orderbottom .btn{
  display: flex;
  width: 700rpx;
  height: 90rpx;
  margin: 10px;
  margin-bottom: 20px

}

.orderbottom .btn .part {
  width:350rpx
}

.orderbottom .btn .part button{
  width: 70%
}

.orderbottom .detail{
  border-radius: 30rpx;
  border-style: solid;
  border-width: thin;
  margin: 8px;
  display: flex;
  flex-direction: column;
  width: 340px;

}

.orderbottom .detail .first{
  margin: 10px;
  font-size: 50rpx;
  font-weight: 700
}

.orderbottom .detail .second{
  display: flex;
  flex-direction: column;
 
}

.orderbottom .detail .second .part{
  display: flex;
  width: 340px;
  margin-top:10px;
  margin-bottom: 10px; 
}

.orderDetail{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 10rpx 20rpx 10rpx 20rpx;
}

.storename{
  margin-left: 20rpx;
}

.billmoney{
  display: flex;
  flex-direction: row-reverse;
  margin-right: 30rpx;
}

.orderdate{
  margin-left: 20rpx;
}

.orderdivLine{
  background: #E0E3DA;
  width: 100%;
  height: 1rpx;
  margin-bottom: 20rpx;
}