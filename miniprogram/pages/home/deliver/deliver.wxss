.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
 margin-bottom: 20rpx;
 
}

.deliver{
  height: 100%;
  display: flex;
  flex-direction: column;
  background: rgba(0, 255, 213, 0.863);

}

.deliver .top{
  height: 80px;
  border-radius: 30rpx;
  background: #fff;
  margin: 8px;
  display: flex;
  
}

.deliver .top .image{
  height: 80px;
  width: 80px;

}

.deliver .top .image image{
  height: 80%;
  width: 90%;
  margin: 10px;

}

.deliver .top .mes{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  justify-content: center;
  padding: 50rpx 50rpx
  

}

.deliver .bottom{
  height: 1300rpx;
  border-radius: 30rpx;
  background: #fff;
  margin: 10px;
  margin-top: 20px;
  display: flex;
  flex-direction: column;

}

.deliver .bottom .image{
  height: 350px;
  width: 350px;
  margin-left: 10px


}

.deliver .bottom .image image{
  height: 90%;
  width: 90%;
  margin: 10px;

}

.bottom .btn{
  display: flex;
  width: 700rpx;
  height: 90rpx;
  margin: 10px;
  margin-bottom: 20px

}

.bottom .btn .part {
  width:350rpx
}

.bottom .btn .part button{
  width: 70%
}

.bottom .detail{
  border-radius: 30rpx;
  border-style: solid;
  border-width: thin;
  margin: 8px;
  display: flex;
  flex-direction: column;
  width: 340px;

}

.bottom .detail .first{
  margin: 10px;
  font-size: 50rpx;
  font-weight: 700
}

.bottom .detail .second{
  display: flex;
  flex-direction: column;
 
}

.bottom .detail .second .part{
  display: flex;
  width: 340px;
  margin-top:10px;
  margin-bottom: 10px
  
  
}
