/* pages/order/order.wxss */
.tabbar{
  background-color: rgb(251, 249, 254);
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid gainsboro;
  /* background-color: red; */
  height: 10%;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.swtnav{
  flex: 1;
  justify-content: center;
  align-items: center;
  padding-top: 10rpx;
}
.switch{
  flex: 1;
  justify-content: center;
  align-items: center;
  margin: 10rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.tabbarText{
  font-size: 27rpx;
}

.loginHide {
  display: none;
}

.order-hd {
  clear: both;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  color: #ccc;
  border-bottom: 1px solid #39f;
}

.button_container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: #39f 1rpx solid;
}

/* 按钮未选中 */

.normal_button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: white;
  color: #ccc;
  margin: 0;
  padding: 0;
}

/* 按钮选中 */

.checked_button {
  flex: 1;
  font-weight: bolder;
  /* background: red; */
  color: #39f;
}

.button-hover {
  background: black;
}

.food-item {
  margin-left: 10%;
  clear: both;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.food-lable {
  color: #333;
  flex: 3;
  text-align: left;
}

.food-value {
  flex: 1;
}

.weui-form-preview__label {
  color: black;
}
